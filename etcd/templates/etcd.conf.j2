{% if manager_network == "ens33" %}
##
## [Member]
##
ETCD_DATA_DIR="/var/lib/etcd/default.etcd"
ETCD_LISTEN_CLIENT_URLS="http://{{ansible_ens33.ipv4.address}}:2379,http://127.0.0.1:2379"
ETCD_LISTEN_PEER_URLS="http://{{ansible_ens33.ipv4.address}}:2380"
##
## [Clustering] 
##
ETCD_NAME="{{inventory_hostname_short}}"
ETCD_INITIAL_ADVERTISE_PEER_URLS="http://{{ansible_ens33.ipv4.address}}:2380"
ETCD_ADVERTISE_CLIENT_URLS="http://{{ansible_ens33.ipv4.address}}:2379"
ETCD_INITIAL_CLUSTER="{{controller1_hostname}}=http://{{controller1_ip}}:2380,{{controller2_hostname}}=http://{{controller2_ip}}:2380"
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster"
ETCD_INITIAL_CLUSTER_STATE="new"
{% endif %}
